<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="modelFor"
            type="com.example.bohdan.apixuweather.Model"/>
    </data>

    <RelativeLayout
        android:id="@+id/fragment_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/images"
        >


        <TextView
            android:id="@+id/textView"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="108dp"
            android:text="@{modelFor.location.name}"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:layout_marginEnd="-89dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="142dp"
            android:text="@{modelFor.location.country}" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView11"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            android:textColor="@android:color/white"
            android:text='@{"humidity: "+ String.valueOf(modelFor.current.humidity)}' />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="225dp"
            android:textColor="@android:color/white"
            android:layout_marginStart="67dp"
            android:gravity="center"
            android:text='@{"wind: " + String.valueOf(modelFor.current.windMph)}' />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_marginEnd="99dp"
            android:text="@{modelFor.current.condition.text}" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView11"
            android:text='@{"pressure: " + String.valueOf(modelFor.current.pressureIn)}' />

        <GridView
            android:id="@+id/gridListView"
            android:layout_width="wrap_content"
            android:layout_height="201dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="17dp"
            android:numColumns="2" />

        <SearchView
            android:id="@+id/searching"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="71dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="43dp"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="135dp"
            android:scaleType="centerCrop"

            android:src="@{modelFor.current.condition.icon}"
            bind:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="78dp"
            android:layout_height="16dp"
            android:layout_alignStart="@+id/textView6"
            android:textColor="@android:color/white"

            android:layout_alignTop="@+id/textView5"
            android:gravity="center"
            android:text='@{"visib_km: " + String.valueOf(modelFor.current.visKm)}' />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="94dp"
            android:layout_height="82dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="168dp"
            android:background="@drawable/temp_circle"
            android:gravity="center"
            android:text='@{String.valueOf(modelFor.current.tempC)+ " Â°C"}'
            android:textColor="@android:color/white" />


    </RelativeLayout>
</layout>
